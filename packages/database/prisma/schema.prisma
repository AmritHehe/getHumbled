datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
}

enum Role {
  USER
  ADMIN
}

enum ContestType {
  DEV
  DSA
}
enum ContestStatus {
  UPCOMING
  LIVE
  CLOSED
}

enum MCQs {
  A 
  B
  C
  D
}
enum Mode { 
  real
  practice
}
model User {
  id            String    @id @unique @default(cuid())
  name          String
  email         String?   @unique
  password      String 
  CreatedAt     DateTime?
  role          Role @default(USER)
  contest       Contests[]
  submissions submissions[]
}

model Contests{ 
  id   String @id @unique @default(cuid())
  srNo Int @default(autoincrement())
  title String @unique
  discription String
  type  ContestType
  status ContestStatus
  user User @relation(fields: [createdBy]  , references: [id])
  createdBy  String
  StartDate DateTime?
  StartTime DateTime?
  ContestTotalTime Int @default(60)
  leaderboard LeaderBoard?
  mode Mode @default(real)
  MCQ MCQ[]
  codeQ Code[]
  submissions submissions[]
}
//we can add a type in contest that either its private or public or or or 
// we can make a entire different public contest table 
// I think changing the type of contest will rather be EASY , rather then deleting them from one table then putting them on another table 

model MCQ{
  id String @id @default(cuid())
  srNo Int @default(autoincrement())
  question String 
  Solution MCQs
  contest Contests @relation(fields: [contestId], references: [id] , onDelete: Cascade)
  contestId String
  createdAt DateTime?
  points Int 
  avgTTinMins Int @default(2)
  submissions submissions[]
}
model Code{
  id String @id @default(cuid())
  srNo Int @default(autoincrement())
  question String
  Solution String
  contest Contests @relation(fields: [contestId] , references: [id] , onDelete: Cascade)
  contestId String
  avgTTinMins Int @default(30)
}
model LeaderBoard{
  id String @id @unique @default(cuid())
  contest Contests @relation(fields: [contestId] , references: [id] , onDelete: Cascade)
  contestId String @unique
  score Score[]
  isFinaLized Boolean @default(false)
}
model Score{
  id String @id @default(cuid()) @unique
  user String
  TotalScore Int
  rank Int
  leaderBoard LeaderBoard @relation(fields: [leaderboardId] , references: [id] , onDelete: Cascade)
  leaderboardId String

  @@unique([user , leaderboardId])
}
model submissions{ 
  id String @id @default(cuid())@unique
  user User @relation(fields: [userId] , references: [id], onDelete: Cascade)
  userId String 
  contest Contests @relation(fields: [contestId], references: [id]  , onDelete: Cascade)
  contestId String
  mcq  MCQ @relation(fields: [questionId] , references: [id] , onDelete: Cascade)
  questionId String
  selectedOption MCQs
  isCorrect Boolean @default(false)
  mode Mode @default(real)
  @@unique([userId , contestId , questionId])
}
